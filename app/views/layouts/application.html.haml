!!!html
%html
  %head
    %title Social Wiki
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  
  %body
    %header
      #headerbar
        = link_to "Social Wiki", "/", {id: 'logo'}
        
        - if current_user
          = label_tag current_user.username
          = link_to 'Logout', logout_path, {id: 'navBar'}
  
        - else
          = link_to "Log in", login_path, {id: 'navBar'}
          = link_to "Sign up", signup_path, {id: 'navBar'}
        
        
    #body
      = yield
    