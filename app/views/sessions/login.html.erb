
<% @page_title = "Login" -%> 

<h1>Log in</h1>

<div>
  <%= form_tag(login_url) do %>
  <div class="field">
    <%= label_tag :username_or_email %><br>
    <%= text_field_tag :username_or_email %>
  </div>
  <div class="field">
    <%= label_tag :login_password %>
    <%= link_to "(forgot password)", new_password_reset_path%><br>
    <%= password_field_tag :login_password %>
  </div>

  <div class="action">
    <%= submit_tag :Login %>
  </div>

  <% end %>
</div>

<%= link_to 'Back', home_path %>
